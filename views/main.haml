!!!
%html
  %head
    %meta{:charset=>'uth-8'}
    %title Test
  %body
  %table{:border=>1}
    %thead
    %tbody
      %td PLACE
      %form{:method=>"get", :action=>"/"}
        %td
          %input{:type=>"text", :name=>"search_place", :value=>@place}
        %td
          %input{:type=>"submit", :value=>"検索"}          
  %table{:border=>1}
    %thead
      %tr
        %th NAME
        %th PLACE
        %th TIME
    %tbody      
      - for i in 0..@mem_id.length - 1
        %tr
          %td= @mem_name[i]
          %td= @newest_place[i]
          %td= @newest_time[i]
          %form{:method=>"get", :action=>"/location_new1"}
            %td
              %input{:type=>"submit", :value=>"位置情報変更"}
              %input{:type=>"hidden", :name=>"id", :value=>@mem_id[i]}
          %form{:method=>"get", :action=>"/location_history"}
            %td
              %input{:type=>"submit", :value=>"履歴"}
              %input{:type=>"hidden", :name=>"id", :value=>@mem_id[i]}
%form{:method=>"get", :action=>"/mem_register"}
  %input{:type=>"submit", :value=>"メンバー編集"}


