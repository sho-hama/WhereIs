!!!
%html
  %head
    %meta{:charset=>'uth-8'}
    %title Test
  %body
    %table{:border=>1}
      %thead
        %tr
          %th NAME
          %th PLACE
          %th TIME
      %tbody
        - @members.each do |mem|
          %tr
            %td= mem.name
            %td= mem.locations.place
            %td= mem.locations.time
            %form{:method=>"get", :action=>"/location_new1"}
              %td
                %input{:type=>"submit", :value=>"位置情報変更"}
              %input{:type=>"hidden", :name=>"id", :value=>mem.id}
              %form{:method=>"get", :action=>"/location_history1"}
                %td
                  %input{:type=>"submit", :value=>"履歴"}
                  %input{:type=>"hidden", :name=>"id", :value=>mem.id}
      %form{:method=>"get", :action=>"/mem_register"}
      %input{:type=>"submit", :value=>"メンバー編集"}



